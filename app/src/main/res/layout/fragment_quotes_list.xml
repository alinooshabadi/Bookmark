<?xml version="1.0" encoding="utf-8"?>
<com.novler.quotes.util.customLayout.EmptySwipeRefreshLayout android:id="@+id/swipeRefreshLayout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <FrameLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:divider="@null" />


    <LinearLayout
      android:id="@+id/reload"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_horizontal"
      android:gravity="center"
      android:textAlignment="center"
      android:orientation="vertical"
      >

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="دوباره تلاش کنید"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="normal|bold" />

      <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_disconnected" />
    </LinearLayout>

  </FrameLayout>

</com.novler.quotes.util.customLayout.EmptySwipeRefreshLayout>